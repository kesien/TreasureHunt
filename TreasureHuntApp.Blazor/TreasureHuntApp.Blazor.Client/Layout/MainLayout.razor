@inherits LayoutComponentBase
<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Typo="Typo.h6">TreasureHunt App</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                       Color="Color.Inherit" OnClick="@ToggleDarkMode" Title="Téma váltás" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudDrawerHeader Class="d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.Search" Size="Size.Large" Class="mr-3" />
            <MudText Typo="Typo.h6">Kincskeresés</MudText>
        </MudDrawerHeader>

        <MudNavMenu>
            <MudText Typo="Typo.subtitle2" Class="px-4 mud-text-secondary">Fő menü</MudText>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Főoldal</MudNavLink>

            <MudDivider Class="my-2" />

            <MudText Typo="Typo.subtitle2" Class="px-4 mud-text-secondary">Admin</MudText>
            <MudNavGroup Text="Adminisztráció" Icon="@Icons.Material.Filled.AdminPanelSettings" Expanded="false">
                <MudNavLink Href="/admin/login" Icon="@Icons.Material.Filled.Login">Bejelentkezés</MudNavLink>
                <MudNavLink Href="/admin/dashboard" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
                <MudNavLink Href="/admin/events" Icon="@Icons.Material.Filled.Event">Események</MudNavLink>
            </MudNavGroup>

            <MudDivider Class="my-2" />

            <MudText Typo="Typo.subtitle2" Class="px-4 mud-text-secondary">Csapat</MudText>
            <MudNavGroup Text="Csapat funkciók" Icon="@Icons.Material.Filled.Groups" Expanded="false">
                <MudNavLink Href="/team/join" Icon="@Icons.Material.Filled.Login">Csatlakozás</MudNavLink>
                <MudNavLink Href="/team/dashboard" Icon="@Icons.Material.Filled.Dashboard">Csapat áttekintő</MudNavLink>
                <MudNavLink Href="/team/map" Icon="@Icons.Material.Filled.Map">Térkép</MudNavLink>
                <MudNavLink Href="/team/photos" Icon="@Icons.Material.Filled.Photo">Fotók</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Class="pt-16 px-16">
        <MudContainer MaxWidth="MaxWidth.False" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;
    private MudThemeProvider _mudThemeProvider = null!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
            StateHasChanged();
        }
    }

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }
}
